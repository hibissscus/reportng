<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="ReportNG Sample" verbose="1" thread-count="2">

    <test name="All Sample Tests" parallel="true">
        <packages>
            <package name="testee.it.reportng.sample.*"/>
        </packages>
    </test>

    <!-- Use the same tests again. -->
    <test name="Only Unsuccessful Tests">
        <classes>
            <class name="testee.it.reportng.sample.FailedTests"/>
            <class name="testee.it.reportng.sample.SkippedTests"/>
        </classes>
    </test>

    <!-- Use the same tests again. -->
    <test name="Partially Successful Tests">
        <classes>
            <class name="testee.it.reportng.sample.PartiallySuccessfulTests"/>
        </classes>
    </test>

</suite>
